{
	// *******************************************
	// ************ Workbench Config *************
	// *******************************************
	"workbench.colorCustomizations": {
		"editor.lineHighlightBackground": "#1073cf2d",
		"editor.lineHighlightBorder": "#9fced11f"
	},
	"workbench.colorTheme": "One Dark Pro",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.tree.indent": 22,
	"workbench.tree.renderIndentGuides": "always",
	"notebook.diff.enablePreview": false,
	// *******************************************
	// ************** Editor Config **************
	// *******************************************
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.accessibilitySupport": "off",
	"editor.cursorBlinking": "solid",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[csharp]": {
		"editor.defaultFormatter": "ms-dotnettools.csharp"
	},
	"editor.fontFamily": "'Monolisa Nerd Font Mono'",
	"editor.fontLigatures": true,
	"editor.fontSize": 14,
	"editor.fontWeight": "normal",
	"editor.formatOnSave": true,
	"editor.guides.bracketPairs": false,
	"editor.guides.indentation": false,
	"editor.inlayHints.enabled": "off",
	"editor.inlineSuggest.enabled": true,
	"editor.inlineSuggest.showToolbar": "always",
	"editor.lineHeight": 22,
	"editor.linkedEditing": true,
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "trailing",
	"editor.snippetSuggestions": "inline",
	"editor.suggest.insertMode": "replace",
	"editor.tabSize": 3,
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 100,
	// *******************************************
	// *********** Diff Editor Config ************
	// *******************************************
	"diffEditor.wordWrap": "on",
	// *******************************************
	// ************** Files Config ***************
	// *******************************************
	"files.autoSave": "onFocusChange",
	"files.eol": "\n",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/bin/**": true,
		"**/obj/**": true
	},
	// *******************************************
	// ************* Explorer Config *************
	// *******************************************
	"explorer.autoReveal": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	// *******************************************
	// ************ Javascript Config ************
	// *******************************************
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"vue.updateImportsOnFileMove.enabled": true,
	// *******************************************
	// ************** Emmet Config ***************
	// *******************************************
	"emmet.triggerExpansionOnTab": true,
	// *******************************************
	// *************** Git Config ****************
	// *******************************************
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	// "git.path": "\\\\wsl.localhost\\Debian\\usr\\bin\\git", => If you want to use WSL git
	// *******************************************
	// ************* Prettier Config *************
	// *******************************************
	"prettier.arrowParens": "always",
	"prettier.bracketSpacing": true,
	"prettier.printWidth": 100,
	"prettier.semi": true,
	"prettier.singleQuote": true,
	"prettier.useTabs": false,
	"prettier.endOfLine": "lf",
	// *******************************************
	// ************* Material Config *************
	// *******************************************
	"material-icon-theme.activeIconPack": "vue_vuex",
	"material-icon-theme.folders.theme": "specific",
	"material-icon-theme.hidesExplorerArrows": true,
	// *******************************************
	// ************* Terminal Config *************
	// *******************************************
	"terminal.integrated.defaultProfile.windows": "Debian (WSL)",
	"terminal.integrated.fontFamily": "MesloLGS NF",
	"terminal.integrated.profiles.windows": {
		"Command Prompt": {
			"path": [
				"${env:windir}\\Sysnative\\cmd.exe",
				"${env:windir}\\System32\\cmd.exe"
			],
			"args": [],
			"icon": "terminal-cmd"
		},
		"Debian (WSL)": {
			"path": "C:\\windows\\System32\\wsl.exe",
			"args": ["-d", "Debian"]
		},
		"Git Bash": {
			"source": "Git Bash"
		},
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell"
		}
	},
	// *******************************************
	// ************* Security Config *************
	// *******************************************
	"security.allowedUNCHosts": ["wsl.localhost"],
	"security.workspace.trust.untrustedFiles": "open",
	// *******************************************
	// ************** CSpell Config **************
	// *******************************************
	"cSpell.language": "en,fr",
	"gitlens.views.pullRequest.files.layout": "list",
	"xml.server.preferBinary": true,
	"http.proxyStrictSSL": false,
	"http.proxy": null,
	// *******************************************
	// ********** Better Comment Config **********
	// *******************************************
	"better-comments.tags": [
		{
			"tag": "!",
			"color": "#FF2D00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "?",
			"color": "#3498DB",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "//",
			"color": "#474747",
			"strikethrough": true,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "todo",
			"color": "#FF8C00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "*",
			"color": "#98C379",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "#region",
			"color": "#FF8C00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "#endregion",
			"color": "#FF8C00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		}
	]
}
