{
	// Workbench config
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorTheme": "One Dark Pro",
	"workbench.tree.indent": 22,
	"workbench.tree.renderIndentGuides": "always",
	"notebook.diff.enablePreview": false,
	// Material Icon Theme config
	"material-icon-theme.folders.theme": "specific",
	"material-icon-theme.hidesExplorerArrows": true,
	"material-icon-theme.activeIconPack": "react_redux",
	"material-icon-theme.folders.associations": {
		"slices": "Redux-reducer",
		"DTO": "Interface",
		"comment": "Messages",
		"pagination": "Docs"
	},
	"material-icon-theme.files.associations": {
		"*.module.ts": "Nest-module",
		"*.controller.ts": "Nest-controller",
		"*.service.ts": "Nest-service",
		"*.interface.ts": "Readme",
		"*.dto.ts": "Nest-decorator",
		"*.model.ts": "Nest-decorator",
		"*.resolver.ts": "Nest-resolver",
		"*.strategy.ts": "Nest-gateway",
		"*.guard.ts": "Nest-guard",
		"*.middleware.ts": "Nest-middleware",
		"*.filter.ts": "Nest-filter",
		"*.pipe.ts": "Nest-pipe",
		"*.mutation.ts": "GraphQL",
		"*.query.ts": "GraphQL"
	},
	// Editor config
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "trailing",
	"editor.linkedEditing": true,
	"editor.suggest.insertMode": "replace",
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.fontFamily": "Monolisa",
	"editor.fontWeight": "normal",
	"editor.fontLigatures": true,
	"editor.lineHeight": 22,
	"editor.tabSize": 3,
	"editor.snippetSuggestions": "inline",
	"editor.inlineSuggest.enabled": true,
	// Files config
	"files.autoSave": "onFocusChange",
	// Explorer config
	"explorer.autoReveal": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	// Emmet config
	"emmet.triggerExpansionOnTab": true,
	// Git config
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.allowForcePush": true,
	"git.autofetch": true,
	// Prettier config
	"prettier.jsxSingleQuote": true,
	"prettier.semi": false,
	"prettier.singleQuote": true,
	"prettier.useTabs": true
}
